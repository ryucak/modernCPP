#include <string>
#include <filesystem>
#include <iostream>

using fs = std::filesystem;

void getDirSize(fs::path dir, size_t size){

	for(auto e: fs::directory_iterator("../")){
	  std::cout << e.path().filename().string() << std::endl;
	}
}


int main(int argc, char **argv) {
	getDirSize(fs::current_path());
}
