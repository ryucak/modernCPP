#include <iostream>
#include <vector>

void pascal(int len){
	std::vector<int> prev(1);
	prev[0] = 1;

	for (int i = 0; i < len; ++i) {
		std::vector<int> line(i);

		if(i == 0 || len-1){
			line[i] = prev[i];
		}else{
			line[i] = prev[i] + prev[i-1];
		}
		std::cout << line[i] << std::endl;
		prev = line;
		std::cout << endl;
	}
}

int main(int argc, char **argv) {
	pascal(10);
}
