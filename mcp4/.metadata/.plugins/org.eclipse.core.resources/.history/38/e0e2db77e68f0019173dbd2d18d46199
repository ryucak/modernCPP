#include <iostream>
#include <vector>

void pascal(int len){
	std::vector<int> prev(1);
	prev[0] = 1;

	for (int i = 0; i < len; ++i) {
		std::cout << i << "," << len << std::endl;
		std::vector<int> line(i);
		for (int j = 0; j <= i; ++j) {
			std::cout << line[i];
		}
		prev = line;
		std::cout << std::endl;
	}
}

int main(int argc, char **argv) {
	pascal(10);
}
