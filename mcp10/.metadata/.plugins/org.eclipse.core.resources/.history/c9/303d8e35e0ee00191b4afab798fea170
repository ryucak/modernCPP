#include <String>
#include <cstdlib>
#include <iostream>
#include "png++/png.hpp"

using namespace png;

int main(int argc, char **argv) {

	int width = 400;
	int height = 300;
	std::string filename = "out.png";

	std::cout << width << ',' << height << "->" << filename << std::endl;

	image<rgb_pixel> img("imput.png");

	img.resize(width,height);

	img.write(filename);

	return 0;
}



