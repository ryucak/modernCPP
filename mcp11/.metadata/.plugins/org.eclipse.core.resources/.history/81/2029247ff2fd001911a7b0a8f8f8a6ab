#include <iostream>
#include <string>
#include <functional>

class vignere{
	std::string key;
	char to_cipher(char c, char k){
		return c + (k - 'A');
	}
	char to_clear(char c, char k){
		return c - (k - 'A');
	}
	std::string crypt(std::string in, std::function<char(char,char)> f)
	{
		std::string out;

		for (size_t i = 0; i < in.length(); ++i) {
			char c = in[i];
			if(isalpha(c) && isupper(c)){
				c = f(c,key[i%key.length()]);
			}
			out.push_back(c);
		}
		return out;
	}
public:
	vignere(std::string key){
		this->key = key;
	};

	std::string encrypt(std::string clr){
		return this->crypt(clr,this->to_cipher());
	}
	std::string decrypt(std::string cpr){
		return crypt(cpr,to_clear);
	}
};

int main(int argc, char **argv) {
	std::string hoge;
	vignere vig("ARM");

	std::string hoge_crypt = vig.encrypt(hoge);
	std::cout << hoge_crypt << std::endl;
	std::cout << vig.decrypt(hoge_crypt) << std::endl;

	return 0;
}


